<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/astronaut_blue_secondary_color"
    app:layoutDescription="@xml/splash_activity_scene">

    <TextView
        android:id="@+id/text_view_splash_activity_app_name"
        style="@style/SplashActivityTitleTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:layout_constraintBottom_toTopOf="@id/image_view_splash_activity_app_icon" />

    <ImageView
        android:id="@+id/image_view_splash_activity_app_icon"
        android:layout_width="@dimen/splash_activity_image_view_icon_width"
        android:layout_height="@dimen/splash_activity_image_view_icon_height"
        android:layout_marginTop="@dimen/splash_activity_text_style_margin_small"
        android:contentDescription="@string/splash_activity_image_view_app_icon_description"
        android:src="@drawable/ic_splash_activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_splash_activity_powered_message"
        style="@style/SplashActivityBaseTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/splash_activity_text_view_powered_message"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.motion.widget.MotionLayout>
