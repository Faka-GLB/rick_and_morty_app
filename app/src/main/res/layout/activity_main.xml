<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <com.google.android.material.tabs.TabLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/view_pager_main_activity"
        android:id="@+id/tab_layout_main_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorGravity="top"
        android:background="@color/astronaut_blue_secondary_color"
        app:tabTextColor="@color/apple_primary_color" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_main_activity"
        app:layout_constraintTop_toBottomOf="@id/tab_layout_main_activity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_activity_fragment_height" />

</androidx.constraintlayout.widget.ConstraintLayout>
