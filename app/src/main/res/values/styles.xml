<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashActivityTitleTextStyle">
        <item name="fontFamily">@font/creepster</item>
        <item name="android:textSize">@dimen/splash_activity_app_name_text_size_xbig</item>
        <item name="android:textColor">@color/apple_text_color_splash_activity</item>
        <item name="android:layout_marginStart">@dimen/splash_activity_text_style_margin_small</item>
        <item name="android:layout_marginEnd">@dimen/splash_activity_text_style_margin_small</item>
        <item name="android:textAlignment">center</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.3</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowColor">@color/apple_text_color_splash_activity</item>
    </style>
    <style name="SplashActivityBaseTextStyle">
        <item name="android:textColor">@color/apple_text_color_splash_activity</item>
        <item name="android:layout_margin">@dimen/splash_activity_text_style_margin_small</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/splash_activity_base_text_size_normal</item>
    </style>
</resources>
